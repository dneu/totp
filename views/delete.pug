extends layout

block title
  | Delete Provider

block content
    h1(style="color:red;")= 'Are you sure you want to delete ' + provider.name + '?'
    h3= 'This CANNOT be undone. Make sure you have backed up your 2FA key.'
    form(action=`/p/${provider.name.toLowerCase()}/delete`, method="POST")
      button(type="submit", name="action", value="cancel") No, cancel
        
      button(type="submit", name="action", value="delete" style="margin-left:1em;") Yes, delete
      
